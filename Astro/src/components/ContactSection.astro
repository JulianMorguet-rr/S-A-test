---
import PlaceholderImage from "./PlaceholderImage.astro";
import CustomImage from "./atomicComponents/CustomImage.astro";

const { data } = Astro.props

---



<!-- style="grid-template-columns: 1fr 2fr;" -->

<div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
    
    {
        data.disableUpperSection === false &&
            <div class="max-w-screen-md m-auto text-center pt-8">
                {
                    data.upperSection.tagline &&
                    <p class="section-tagline text-gray-500 sm:text-xl mb-4">
                        { data.upperSection.tagline }
                    </p>
                }
                {
                    data.upperSection.title &&
                    <h2 class="section-heading mb-4 text-4xl tracking-tight text-gray-900">
                        { data.upperSection.title }
                    </h2>
                }
                {
                    data.upperSection.paragraph &&
                        <p class="section-block-content font-light text-gray-500 md:text-lg">
                            { data.upperSection.paragraph }
                        </p>
                }
        
                <!-- <div class="divider pb-8"></div> -->
            </div>
    }

    <div class={`text-section  ${data.maxWidth === 'medium' ? 'max-w-screen-md' : ''}`}>
        <div class="gap-8 items-center py-8 px-4 mx-auto max-w-screen-xl xl:gap-16 md:grid md:grid-cols-2 sm:py-16 lg:px-6" >
            
            <div class="section-asset-round rounded-full overflow-hidden">
            {
                data.imageOfContactPerson ?
                    <CustomImage 
                        imgSrc={data.imageOfContactPerson} 
                        altText={`Ansprechpartner*in ${data.contactPerson}`}
                        width={656}
                        height={656}
                        rounded={false}
                        class="w-full"
                    />
                :
                <PlaceholderImage></PlaceholderImage>
            }
            </div>
                    
            <div class="mt-4 md:mt-0">

                
                
                <div class="section-block">
                    {
                        data.contactPerson &&
                        <h3 class="mb-4 text-2xl tracking-tight text-gray-900">
                            { data.contactPerson.toUpperCase() }
                        </h3>
                    }
                    {
                        data.position &&
                        <p class="mb-6 text-1xl font-medium text-gray-500 md:text-lg">
                            { data.position.toUpperCase() }
                        </p>
                    }

                    {
                        data.company &&
                        <p class="mb-6 text-1xl font-medium md:text-lg">
                            { data.company }
                        </p>
                    }
                    {
                        data.adress &&
                            data.adress.adressLine1 &&
                            <p class="mb-0 font-regular text-gray-500 md:text-lg">
                                { data.adress.adressLine1 }
                            </p>
                    }
                    {
                        data.adress &&
                            data.adress.adressLine1 &&
                            <p class="mb-6 font-regular text-gray-500 md:text-lg">
                                { data.adress.adressLine2 }
                            </p>
                    }
                    {
                        data.phone &&
                            <a href={`tel:${data.phone}`}>
                                <p class="mb-6 font-regular text-gray-500 md:text-lg">
                                    { data.phone }
                                </p>
                            </a>
                    }
                    {
                        data.mail &&
                            <a href={`mailto:${data.mail}`}>
                                <p class="mb-6 font-regular text-gray-500 md:text-lg">
                                    { data.mail }
                                </p>
                            </a>
                    }
                    {
                        data.cta &&
                            <a 
                                href="#" 
                                class="inline-flex items-center text-white bg-primary-700 hover:bg-primary-800 focus:ring-4 focus:ring-primary-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                            >
                                Get started
                                <svg class="ml-2 -mr-1 w-5 h-5" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path></svg>
                            </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>



