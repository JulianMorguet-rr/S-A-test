---
import BlockContent from "./BlockContent.astro";
// @ts-ignore
import Quote from "./quotes/Quote.astro";

const {data} = Astro.props 

---


<!-- bg-white dark:bg-gray-900 -->
<div class="quote-collection">
    <div class="py-8 px-4 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
        {/* <h2>{JSON.stringify(pageBuilder)}</h2> */}
        
        <div class="mx-auto max-w-screen-md text-center mb-8 lg:mb-12">
            {
                data.heading &&
                <h2 class="section-heading mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
                    {data.heading}    
                </h2>
            }
            {
                data.blockContent &&
                <div class="mb-5 font-light text-gray-500 sm:text-xl">
                    <BlockContent data={data.blockContent} />
                </div>
            }
        </div>

        <!-- lg:grid lg:grid-cols-1 -->
        <div class="space-y-8  sm:gap-6 xl:gap-10 lg:space-y-0 flex items-start flex-wrap">
            
                {   
                    data.quoteArray.map((ref, index) => {
                        const isEven = number => number % 2 === 0;
                        if(isEven(index)) {
                            return (
                                <Quote reference={ref} />
                            )
                        }
                        if(!isEven(index)) {
                            return (
                                <Quote reference={ref} />
                            )
                        }
                    })
                }

        </div>
    </div>
</div>